<p id="notice"><%= notice %></p>

<h1>Books</h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Describe</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name%></td>
          <td><%= book.describe %></td>
          <td><%= link_to 'Show', book, class: "btn btn-info"%></td>
          <td><%= link_to 'Edit', edit_book_path(book),class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', book,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-success" %>
<%= link_to 'Back', areas_path, class: "btn btn-success"%>

