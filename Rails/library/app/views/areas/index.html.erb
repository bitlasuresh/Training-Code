<p id="notice"><%= notice %></p>

<h1 style="text-align: center">Areas</h1>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @areas.each do |area| %>
        <tr>
          <td><%= area.name %></td>
          <td><%= link_to 'View ', library_stores_path, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_area_path(area), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', area, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 

<br>

<%= link_to 'New Area', new_area_path, class: "btn btn-success" %>
<%= link_to 'Back', cities_path, class: "btn btn-success" %>

