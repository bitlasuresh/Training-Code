<p id="notice"><%= notice %></p>

<h1 style="text-align: center">Library Stores</h1>
<div class="container">
  <table class="table table table-bordered" >
    <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @library_stores.each do |library_store| %>
        <tr>
          <td><%= link_to library_store.name,books_path %></td>
          <td><%= library_store.author %></td>
          <td><%= link_to 'Show', library_store, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_library_store_path(library_store), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', library_store, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Library Store', new_library_store_path, class: "btn btn-success" %>
<%= link_to 'Back', areas_path, class: "btn btn-success" %>
